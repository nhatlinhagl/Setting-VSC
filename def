.menu {
	background: none;
	border: none;
	cursor: pointer;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	width: 40px;
	height: 40px;
	position: relative;
}

.menu .icon-bar {
	width: 30px;
	height: 4px;
	background-color: black;
	margin: 3px 0;
	transition: 0.4s;
}

/* Close Icon */
.close-menu {
	display: none;
	background: none;
	border: none;
	cursor: pointer;
	width: 40px;
	height: 40px;
	position: relative;
	justify-content: center;
	align-items: center;
}

.close-menu .close-bar {
	position: absolute;
	width: 30px;
	height: 4px;
	background-color: #333333;
	transition: 0.4s;
}

.close-menu .close-bar:nth-child(1) {
	transform: rotate(45deg);
}

.close-menu .close-bar:nth-child(2) {
	transform: rotate(-45deg);
}

/* Menu Item Styling */
.menu-item {
	margin-top: 40px;
	display: none;
	position: fixed;
